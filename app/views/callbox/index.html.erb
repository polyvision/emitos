<div id="content-header">
  <h1><%= t('nav.callbox') %></h1>
</div>

<div id="breadcrumb">
  <a href="/" title="Go to Home" class="tip-bottom"><i class="icon-home"></i>Dashboard</a>
  <a href="#" class="current"><%= t('nav.callbox') %></a>
</div>

<div class="container-fluid">

  <div class="row-fluid">
    <div class="span12">
      <p>
        <%= simple_form_for(@call_box_prototype, :url => {:action => 'create'}, :html => {:class => 'form-horizontal'}) do |f| %>
            <%= f.input :name, :label => t('call_box.name') %>
            <%= f.button :submit, t('actions.create'), :input_html => {:class => 'btn btn-primary'} %>
        <% end %>
      </p>


      <table class="table table-striped">
        <thead>
        <tr>
          <th><%= t('misc.id') %></th>
          <th><%= t('misc.created_at') %></th>
          <th><%= t('misc.name') %></th>
          <th><%= t('misc.mac') %></th>
          <th><%= t('call_box.sound_file') %></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @call_boxes.each do |cb| %>
            <tr>
              <td><%= cb.id %></td>
              <td><%= cb.created_at.to_s(:long) %></td>
              <td><%= cb.name %></td>
              <td><%= cb.mac %></td>
              <td><%= cb.sound_file %></td>
              <td>
                <%= render :partial => 'dropdown', :locals => {:box => cb} %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
