<div class="page-header">
  <h1>Markteinstellungen</h1>
</div>


<form class="form-horizontal">
  <fieldset>
    <legend>Aufrufeinstellungen</legend>


    <div class="control-group">
      <label class="checkbox">
        <input type="checkbox" value="">
        Geschäftsdurchsagen aktiv
      </label>
    </div>

    <div class="control-group">
      <label class="checkbox">
        <input type="checkbox" value="">
        Werbedurchsagen aktiv
      </label>
    </div>

    <div class="control-group">
      <div class="controls">
        <button type="submit" class="btn">speichern</button>
      </div>
    </div>

  </fieldset>
</form>


<form class="form-horizontal">
  <fieldset>
    <legend>Öffnungs- und Schliessungszeiten</legend>


    <div class="control-group">
      <div class="controls">
        <label class="control-label">Wochentag:</label>
        <select>
          <option>Montag</option>
          <option>Dienstag</option>
          <option>Mittwoch</option>
          <option>Donnerstag</option>
          <option>Freitag</option>
          <option>Samstag</option>
          <option>Sonntag</option>
        </select>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <label class="control-label">Öffnungszeiten: </label>
        <%= time_select 'test', 'test' %>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <label class="control-label">Schliessungszeiten: </label>
        <%= time_select 'test', 'test' %>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
        <button type="submit" class="btn">speichern</button>
      </div>
    </div>

  </fieldset>
</form>