<div id="content-header">
  <h1>Dashboard</h1>
</div>

<div id="breadcrumb">
  <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a>
  <a href="#" class="current">Dashboard</a>
</div>

<div class="container-fluid">

  <div class="row-fluid">
    <div class="span12">
      <div id="active_call_box_container">
        <%= render(:file => 'app/views/home/active_call_boxes') %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">

    function update() {
        $.get('/home/active_call_boxes', function (data) {
            $('#active_call_box_container').html(data);
            window.setTimeout(update, 3000);
        });
    }

    $(document).ready(function () {
        update();
    });

</script>