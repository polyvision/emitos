<div id="content-header">
  <h1>Sound-Dateien</h1>
</div>

<div id="breadcrumb">
  <a href="/" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a>
  <a href="#" class="current">Sound-Dateien</a>
</div>

<div class="container-fluid">

  <div class="row-fluid">
    <div class="span12">
      <p>
      <%= simple_form_for(@sound_file_prototype, :url => {:action => 'create'}, :html => {:class => 'form-horizontal'}) do |f| %>
          <%= f.association :sound_group, :include_blank => false %>
          <%= f.input :file %>
          <%= f.submit t('sound_file.new'), :class => 'btn btn-primary' %>
      <% end %>
      </p>

      <table class="table table-striped">
        <thead>
        <tr>
          <th><%= t('misc.id') %></th>
          <th><%= t('misc.created_at') %></th>
          <th><%= t('misc.filename') %></th>
          <th><%= t('soundfile.sound_group') %></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @sound_files.each do |sf| %>
            <tr>
              <td><%= sf.id %></td>
              <td><%= sf.created_at.to_s(:long) %></td>
              <td><%= sf.filename %></td>
              <td><%= sf.sound_group.name %></td>
              <td>
                <%= button_link(t('actions.delete'), {:action => 'delete', :id => sf.id}, 'icon-trash') %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>