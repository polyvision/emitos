<div class="page-header">
  <h1><%=  t('user.new') %></h1>
</div>

<%= simple_form_for(@user, :url => {:action => 'create'}, :html => {:class => 'form-horizontal' }) do |f| %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.submit %>
<% end %>