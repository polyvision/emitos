<div id="role-options-<%= user.id %>" class="modal hide " role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= simple_form_for(user, :url => {:action => 'update', :id => user.id}, :html => {:class => 'form-horizontal' }) do |f| %>
    <div class="modal-header">
      <a type="button" class="close" data-dismiss="modal" aria-hidden="true">&#215;</a>
      <h3>Change Role</h3>
    </div>
    <div class="modal-body">
      <%= f.input :role_ids, :collection => Role.all, :as => :check_boxes, :label_method => lambda {|t| t.name.titleize}, :label => false, :item_wrapper_class => 'inline' %>
    </div>
    <div class="modal-footer">
      <%= f.submit "Change Role", :class => "btn" %>
      <a class="btn" data-dismiss="modal" aria-hidden="true">Close</a>
    </div>
  <% end %>
</div>
